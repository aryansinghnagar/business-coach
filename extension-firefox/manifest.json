{
  "manifest_version": 2,
  "name": "Business Meeting Copilot",
  "version": "1.0.0",
  "description": "Open the Business Meeting Copilot app: AI meeting coach with engagement detection and talking avatar. Works on any webpage.",
  "permissions": [
    "tabs",
    "storage",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Open Meeting Copilot (side panel)",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "sidebar_action": {
    "default_panel": "sidepanel.html",
    "default_title": "Business Meeting Copilot"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "business-meeting-copilot@local",
      "strict_min_version": "109.0"
    }
  }
}
